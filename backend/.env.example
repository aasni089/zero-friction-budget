# Server Configuration
NODE_ENV=development
PORT=5000
HOST=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Database (Supabase)
# Get these from Supabase Dashboard > Settings > Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@[HOST]/postgres
DIRECT_URL=postgresql://postgres:[PASSWORD]@[HOST]/postgres

# JWT Configuration
JWT_SECRET=your-secret-key-min-32-characters-change-in-production
JWT_EXPIRY=1d
JWT_REFRESH_SECRET=your-refresh-secret-min-32-characters-change-in-production
JWT_REFRESH_EXPIRY=7d

# Google OAuth
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/auth/google/callback

# Email Service (Resend)
# Get API key from https://resend.com
RESEND_API_KEY=re_your_api_key_here
EMAIL_FROM=noreply@yourdomain.com

# SMS Service (Twilio - Optional for 2FA via SMS)
# Get these from https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Encryption
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your-32-byte-hex-encryption-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session
SESSION_SECRET=your-session-secret-min-32-characters

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log
