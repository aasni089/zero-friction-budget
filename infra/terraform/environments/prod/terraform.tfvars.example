# Production Environment Configuration Example
#
# Copy this file to terraform.tfvars and fill in your actual values:
# cp terraform.tfvars.example terraform.tfvars
#
# DO NOT commit terraform.tfvars to version control!

# AWS Configuration
aws_region = "us-east-1"

# Lightsail Configuration
instance_name     = "zfb-prod"
availability_zone = "us-east-1a"
blueprint_id      = "ubuntu_22_04"
bundle_id         = "small_2_0" # $5/month (recommended for production)
# bundle_id       = "nano_2_0"  # $3.50/month (budget option)

# SSH Configuration
# Generate your SSH key: ssh-keygen -t ed25519 -C "your_email@example.com"
# Then paste the public key here (contents of ~/.ssh/id_ed25519.pub)
ssh_public_key = "REPLACE_WITH_YOUR_PUBLIC_SSH_KEY"

# Domain Configuration (optional)
# If you have a custom domain, set it here
# This will be added as a tag to help track which domain points to this instance
domain_name = "" # e.g., "budget.yourdomain.com"
